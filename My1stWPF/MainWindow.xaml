        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My1stWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Start/Stopp" Name="BtnOnOff" HorizontalAlignment="Left" Margin="54,67,0,0" VerticalAlignment="Top" Click="BtnOnOff_Click"/>
        <Label Content="0 Klicks" Name="LblScore" HorizontalAlignment="Left" Margin="54,92,0,0" VerticalAlignment="Top"/>
        <Canvas Margin="158,0,0,0" Name="CanGameCourt" Background="AliceBlue">
            <Ellipse Width="20" Height="20" Name="ellBall" Fill="Brown" Canvas.Left="100" Canvas.Top="100" MouseUp="ellBall_MouseUp"/>
        </Canvas>

    </Grid>
</Window>
